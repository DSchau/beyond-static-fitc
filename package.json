{
  "name": "@dschau/fitc-slides",
  "private": true,
  "version": "1.0.0",
  "main": "n/a",
  "license": "MIT",
  "scripts": {
    "build": "mdx-deck build index.js",
    "postbuild": "npm run optimize && npm run build:pdf",
    "build:pdf": "mdx-deck pdf deck.js",
    "preoptimize": "mkdir -p dist/images",
    "optimize": "if-env NETLIFY=true && find images -type f -exec ./node_modules/.bin/sharp -i '{}' -o dist/'{}' --quality 70 \\; || echo \"Not CI\"",
    "start": "mdx-deck index.js"
  },
  "devDependencies": {
    "if-env": "^1.0.4",
    "mdx-deck": "^1.7.15",
    "sharp-cli": "^1.7.1"
  },
  "dependencies": {
    "@dschau/particles.js": "^2.0.0",
    "react-icons": "^3.2.2",
    "react-textfit": "^1.1.0",
    "react-twitter-embed": "^2.0.4"
  }
}
